<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/default_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/grid_4"
        android:paddingTop="@dimen/grid_2"
        android:paddingEnd="@dimen/grid_4"
        android:paddingBottom="@dimen/grid_2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/grid_1"
            android:layout_weight="1.6"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/grid_0_5"
                android:paddingEnd="@dimen/grid_2"
                tools:background="@drawable/bg_grid_status_recording">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/grid_25"
                    android:layout_marginTop="@dimen/grid_0_5"
                    android:layout_marginBottom="@dimen/grid_0_5"
                    android:background="@drawable/bg_default_white_radius_28"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/grid_1"
                    android:paddingTop="@dimen/grid_1dp"
                    android:paddingRight="@dimen/grid_1"
                    android:paddingBottom="@dimen/grid_1dp"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_12"
                    tools:text="RO554"
                    tools:textColor="@color/default_purple" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/default_white"
                    android:textSize="@dimen/font_size_14"
                    tools:text="$8000.00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/font_size_16"
                tools:textColor="@color/default_purple"
                tools:text="@string/grid_status_recording" />
        </LinearLayout>

    </LinearLayout>
</layout>
